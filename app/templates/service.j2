{
  "apiVersion": "v1",
  "kind": "Service",
  "metadata": {
    "name": "{{model_name}}",
    "namespace": "ml-demo"
  },
  "spec": {
    "selector": {
      "app": "{{model_name}}"
    },
    "ports": [
      {
        "protocol": "TCP",
        "port": 80,
        "targetPort": 8080
      }
    ],
    "sessionAffinity": "None",
    "type": "ClusterIP"
  }
}